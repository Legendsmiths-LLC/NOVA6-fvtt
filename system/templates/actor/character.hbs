<form autocomplete="off" class="nova6-u-full-height {{cssClass}}">
    <div class="nova6-desk">
        {{!--HEADER--}}
        {{> "systems/nova6/templates/components/header.hbs"}}

        <div class="nova6-desk__content nova6-desk__content--actor-sheet">
            <div class="nova6-desk__tabloid">
                {{!--Aspects--}}
                <section class="nova6-desk__aspects">
                    <header class="nova6-headline">
                        <h2 class="nova6-headline__text">{{localize "NOVA.Sheet.Aspects"}}</h2>
                        <div class="nova6-actions nova6-actions--headline">
                            <i class="nova6-js-aspect-add nova6-actions__icon fa fa-plus"></i>
                        </div>
                    </header>

                    {{> "systems/nova6/templates/components/aspects.hbs"}}
                </section>

                {{!--Tabs--}}
                <section class="nova6-desk__tabs nova6-u-padding-std">
                    <nav class="nova6-js-tabs-navigation nova6-tabs-navigation">
                        <a class="nova6-tabs-navigation__item" data-tab="base">
                            {{~localize "NOVA.Sheet.Tabs.Base"~}}
                        </a>
                        <a class="nova6-tabs-navigation__item" data-tab="bio">
                            {{~localize "NOVA.Sheet.Tabs.Bio"~}}
                        </a>
                    </nav>

                    <div class="nova6-js-tab-content nova6-u-full-height">
                        {{!--Base--}}
                        <div class="nova6-tab-content tab" data-tab="base">
                            {{> "systems/nova6/templates/actor/tabs/base.hbs"}}
                        </div>

                        {{!--Bio--}}
                        <div class="nova6-tab-content nova6-tab-content--bio tab" data-tab="bio">
                            {{> "systems/nova6/templates/actor/tabs/bio.hbs"}}
                        </div>
                    </div>
                </section>

                {{> "systems/nova6/templates/components/copyright.hbs"}}
            </div>

            {{!--Sidebar--}}
            <section class="nova6-desk__sidebar">
                {{> "systems/nova6/templates/components/artwork.hbs"}}
            </section>
        </div>
    </div>
</form>
