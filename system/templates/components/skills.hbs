<div class="nova6-skills">

    {{#each skills as |skill skillIndex|}}
        <div class="nova6-js-sortable nova6-item nova6-skill" data-item-id="{{skill._id}}">
            <div class="nova6-headline nova6-headline--skill">
                <h3 class="nova6-headline__text">{{skill.name}}</h3>

                {{#unless skill.data.isNeutral}}
                    <span class="nova6-headline__icon nova6-headline__icon--skill">
                        {{skill.data.rank}}
                    </span>
                {{/unless}}

            </div>

            <div class="nova6-skill__perks">
                {{#if skill.data.perks}}
                    <span>{{skill.data.perks}}</span>
                {{else}}
                    <span class="nova6-skill__perks--disabled">{{localize "NOVA.Item.Skill.NoPerks"}}</span>
                {{/if}}
            </div>

            <div class="nova6-skill__flags">
                <div title="{{localize "NOVA.Item.Skill.Focused"}}" class="nova6-skill__flag nova6-skill__flag--focused {{#unless skill.data.focused}}nova6-skill__flag--disabled{{/unless}}">
                    {{localize "NOVA.Item.Skill.FocusedShort"}}
                </div>
                <div title="{{localize "NOVA.Item.Skill.Practiced"}}" class="nova6-skill__flag nova6-skill__flag--practiced {{#unless skill.data.practiced}}nova6-skill__flag--disabled{{/unless}}">
                    {{localize "NOVA.Item.Skill.PracticedShort"}}
                </div>
                <div title="{{localize "NOVA.Item.Skill.Specialized"}}" class="nova6-skill__flag nova6-skill__flag--specialized {{#unless skill.data.specialized}}nova6-skill__flag--disabled{{/unless}}">
                    {{localize "NOVA.Item.Skill.SpecializedShort"}}
                </div>

                <div class="nova6-actions nova6-js-sortable nova6-actions--item nova6-actions--skill">
                    <i class="nova6-js-item-sort nova6-actions__icon fa fa-sort"></i>
                    <i class="nova6-js-skill-settings nova6-actions__icon fa fa-cog" data-item="{{skill._id}}"></i>
                    <i class="nova6-js-skill-delete nova6-actions__icon nova6-u-delete fa fa-trash" data-item="{{skill._id}}"></i>
                </div>
            </div>
        </div>


