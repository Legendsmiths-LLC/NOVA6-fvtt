{{#each aspects as |aspect aspectIndex|}}
    <div class="nova6-js-sortable nova6-item" data-item-id="{{aspect._id}}">
        <div class="nova6-u-pos-relative">
            <div
                class="nova6-js-aspect-input nova6-text-input"
                data-placeholder="{{aspect.data.label}}"
                contenteditable="true"
                data-item-id="{{aspect._id}}"
                data-focus-id="aspect-name-{{aspect._id}}"
            >
                {{{aspect.data.value}}}
            </div>

            <div class="nova6-actions nova6-actions--item">
                <i class="nova6-js-item-sort nova6-actions__icon fa fa-sort"></i>
                <i class="nova6-js-aspect-settings nova6-actions__icon fa fa-cog" data-item="{{aspect._id}}"></i>
                <i class="nova6-js-aspect-delete nova6-actions__icon nova6-u-delete fa fa-trash" data-item="{{aspect._id}}"></i>
            </div>

            <label class="nova6-text-input__label">{{aspect.data.label}}</label>
        </div>
    </div>
{{/each}}
