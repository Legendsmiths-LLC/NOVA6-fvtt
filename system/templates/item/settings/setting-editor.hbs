<div class="nova6-setting">
    <header class="nova6-headline">
        <h3 class="nova6-headline__text">{{localize headline}}</h3>
    </header>

    <label for="{{fieldName}}">
        <div class="nova6-setting__editor-wrapper">
            {{editor enrichedField target=fieldName button=true editable=editable engine="prosemirror"}}
        </div>
        {{#if help}}<span class="nova6-text-input__setting-label">{{localize help}}</span>{{/if}}
    </label>
</div>
