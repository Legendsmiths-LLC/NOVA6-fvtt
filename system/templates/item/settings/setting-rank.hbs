<div class="nova6-setting">
    <header class="nova6-headline">
        <h3 class="nova6-headline__text">{{localize headline}}</h3>
    </header>

    <div class="nova6-radio-group nova6-radio-group--ranks">
        {{#each radioItems as |radioItem radioItemIndex|}}
            <div
                class="nova6-js-radio-button nova6-radio-rank{{#if (eq radioItem ../field)}} nova6-radio-rank--active{{/if}}{{#if (lt radioItem 0)}} nova6-radio-rank--negative{{/if}}"
                data-value="{{ radioItem }}"
                data-name="{{ ../fieldName }}"
                data-dtype="{{ ../dtype }}"
            >
                <span class="nova6__setting__radio__value">{{ radioItem }}</span>
            </div>
        {{/each}}
    </div>
</div>
